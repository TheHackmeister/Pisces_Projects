= form_for @step_status do |f|
  - if @step_status.errors.any?
    #error_explanation
      %h2= "#{pluralize(@step_status.errors.count, "error")} prohibited this step_status from being saved:"
      %ul
        - @step_status.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :val
    = f.number_field :val
  .actions
    = f.submit 'Save'
