= form_for @communication do |f|
  - if @communication.errors.any?
    #error_explanation
      %h2= "#{pluralize(@communication.errors.count, "error")} prohibited this communication from being saved:"
      %ul
        - @communication.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :summary
    = f.text_field :summary
  .field
    = f.label :notes
    = f.text_area :notes
  .field
    = f.label :communication_status
    = f.text_field :communication_status
  .field
    = f.label :communication_type
    = f.text_field :communication_type
  .field
    = f.label :project
    = f.text_field :project
  .actions
    = f.submit 'Save'
