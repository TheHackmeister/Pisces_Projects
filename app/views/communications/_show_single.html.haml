%div.flex.six{ 'data-' + show_single.js_name => show_single.id}
  %div
    = show_single.summary
  %div
    = show_single.contact.contact_name
  %div
    = show_single.communication_type.text
  %div
    = show_single.communication_status.text
  %div 
    = show_single.comm_date
  %div.right.right_text
    = link_to "E", edit_communication_path(show_single), remote: true, class: 'edit_object'
    != "&nbsp&nbsp"
    = link_to "X", communication_path(show_single, format: :js), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }, remote: true, class: :remove_button
  %div.outline.o_one
    = format_text_field show_single.notes

