= form_for @step do |f|
  - if @step.errors.any?
    #error_explanation
      %h2= "#{pluralize(@step.errors.count, "error")} prohibited this step from being saved:"
      %ul
        - @step.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :action
    = f.text_field :action
  .field
    = f.label :note
    = f.text_area :note
  .field
    = f.label :val
    = f.number_field :val
  .field
    = f.label :step_status
    = f.text_field :step_status
  .field
    = f.label :project_id
    = f.text_field :project_id
  .actions
    = f.submit 'Save'
