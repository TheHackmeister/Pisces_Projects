%div.flex.five.list.item{:data => { show_single.js_name => show_single.id}}
  %div
    = show_single.action
  %div
    = show_single.step_status.text
  %div
    = show_single.note
  %div
    = show_single.due
  %span.right
    = link_to "E", edit_step_path(show_single), remote: true, class: 'edit_object'
    != "&nbsp&nbsp"
    = link_to "X", step_path(show_single, format: :js), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }, remote: true, class: :remove_button
